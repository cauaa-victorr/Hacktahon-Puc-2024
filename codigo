  <script>
    // Função para ler o texto com base no ID
    function lerTexto(id) {
      var texto = document.getElementById(id).innerText;
      var fala = new SpeechSynthesisUtterance(texto);
      fala.lang = "pt-BR";
      fala.volume = 1;
      fala.rate = 1;
      fala.pitch = 1;
      window.speechSynthesis.speak(fala);
    }
  </script>

  <!-- Função para ler o texto escondido -->
  <script>
    function lerPrevisao() {
      // Pegue o texto escondido
      var texto = document.getElementById("previsao-text").innerText;

      // Crie uma instância do objeto SpeechSynthesisUtterance
      var fala = new SpeechSynthesisUtterance(texto);

      // Defina o idioma da fala (Português do Brasil)
      fala.lang = "pt-BR";

      // Ajuste o volume (0 a 1), velocidade (1 é o padrão), e tom (1 é o padrão)
      fala.volume = 1;   // Volume máximo
      fala.rate = 1;     // Velocidade normal
      fala.pitch = 1;    // Tom normal

      // Use a API SpeechSynthesis para falar o texto
      window.speechSynthesis.speak(fala);
    }
  <script>
    // Função para ler o texto com base no ID
    function lerTexto(id) {
      var texto = document.getElementById(id).innerText;
      var fala = new SpeechSynthesisUtterance(texto);
      fala.lang = "pt-BR";
      fala.volume = 1;
      fala.rate = 1;
      fala.pitch = 1;
      window.speechSynthesis.speak(fala);
    }
  </script></script>





